<?xml version="1.0"?>

<!-- Checkout README.md to see when to use this launch file -->

<launch>

    <group ns="amigo">

        <!-- NAVIGATION -->
        <include file="$(find robot_launch_files)/launch/navigation/navigation.launch">
            <arg name="machine" value="amigo2"/>
        </include>

        <!-- WORLD MODEL -->
        <include file="$(find robot_launch_files)/launch/world_modeling/world_model.launch">
            <arg name="machine" value="amigo2"/>
            <arg name="faces_db" value="~/MEGA/data/$(optenv ROBOT_ENV rgo2018)/models/openface_ros/faces.pkl" />
        </include>

        <!-- Joke -->
        <include file="$(find robot_launch_files)/launch/essentials/joke.launch" >
            <arg name="machine" value="amigo2" />
        </include>

		<!-- bridge to amigo telegram bot -->
		<group if="$(optenv ROBOT_REAL false)">
			<node name="telegram_ros_bridge" pkg="telegram_ros" type="telegram_ros_bridge" output="log" required="true">
				<param name="token" value="520313034:AAF6eOsknvmPPVuWpy3TkmCftugOfJ6b-Hg" />
			</node>
        </group>

    </group>

	<node name="conversation_engine" pkg="conversation_engine" type="engine" output="log" required="true" args="--robot amigo">
		<remap from="robot_to_user" to="/amigo/message_to_telegram" />
		<remap from="user_to_robot" to="/amigo/message_from_telegram" />
    </node>

    <!-- Vieze node -->
    <node name="vieze_node" pkg="challenge_final" type="dirty_node.py" output="log" respawn="true" />

    <!-- Action server state machine -->
    <node name="state_machine" pkg="action_server" type="main.py" output="log" required="true" >
        <param name="robot_name" value="amigo"/>
    </node>
</launch>
