<?xml version="1.0"?>

<launch>

        <group ns="amigo">

                <!-- ROBOCUP RECORDER -->
                <include file="$(find robot_launch_files)/launch/essentials/record_robocup.launch">
                        <arg name="machine" value="amigo2" />
                </include>

                <!-- NAVIGATION -->
                <include file="$(find robot_launch_files)/launch/navigation/navigation.launch">
                        <arg name="machine" value="amigo2"/>
                </include>

                <!-- WORLD MODEL -->
                <include file="$(find robot_launch_files)/launch/world_modeling/world_model.launch">
                        <arg name="machine" value="amigo2"/>
                        <arg name="config" value="world_modeling/world_model_spr.yaml"/>
                </include>

                <!-- Vizbox -->
                <rosparam>
story:
    title: Speech and person recognition
    storyline:
        - Turn around after operator mixed with crowd
        - Observe crowd
        - Answer 5 questions from operator
        - Crowd gathers around robot
        - Answer questions from crowd and look at them
        </rosparam>
                <include file="$(find robot_launch_files)/launch/interaction/vizbox.launch">
                        <arg name="machine" value="amigo2" />
                        <arg name="robot_name" value="amigo" />
                </include>

        </group>

        <!-- Start the challenge -->
        <node pkg="challenge_spr" type="challenge_spr.py" name="state_machine" args="amigo" output="screen" required="true"/>

</launch>
